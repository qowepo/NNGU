<div class="col-md-7 col-lg-8 m-auto">
         
        <form asp-controller="Student" asp-action="Edit" method="post" class="needs-validation" novalidate="">
          <div class="row g-3">
               <div class="text-center">
                    
                   <div class="col-12">                 
                      @{
                        string photo_link = "/img/" + Model.id + ".png";
                                <img class="col-6 rounded-circle" src="@photo_link" />
                      }
                  </div>
                  <p></p>
              </div>

            <div class="col-sm-4">
              <label for="firstName" class="form-label">Имя</label>
              <input type="text" class="form-control" id="firstName" asp-for="name" placeholder="Иван" value="@Model.name" required="">
              <div class="invalid-feedback">
                Valid name is required.
              </div>
            </div>

            <div class="col-sm-4">
              <label for="lastName" class="form-label">Фамилия</label>
              <input type="text" class="form-control" id="lastName" asp-for="surname" placeholder="Иванов" value="@Model.surname" required="">
              <div class="invalid-feedback">
                Valid surname is required.
              </div>
            </div>

            <div class="col-sm-4">
              <label for="patronymic" class="form-label">Отчество</label>
              <input type="text" class="form-control" id="patronymic" asp-for="patronymic" placeholder="Иванович" value="@Model.patronymic" required="">
              <div class="invalid-feedback">
                Valid patronymic is required.
              </div>
            </div>            

            <div class="col-sm-6">
              <label for="email" class="form-label">E-mail<span class="text-muted"></span></label>
              <input type="email" class="form-control" id="email" asp-for="email" placeholder="you@example.com" value="@Model.email">
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="phone" class="form-label">Телефон</label>
              <input type="text" class="form-control" id="phone" asp-for="phone" placeholder="+79067520499" value="@Model.phone" required="">
              <div class="invalid-feedback">
                Valid phone is required.
              </div>
            </div>  
            
            <div class="col-sm-6">
              <label for="date_of_birth" class="form-label">Дата рождения</label>
              <input type="text" class="form-control" id="date_of_birth" asp-for="date_of_birth" placeholder="21/02/2002" value="@Convert.ToDateTime(Model.date_of_birth).ToString("dd/MM/yyyy").Replace('.','/')" required="">
              <div class="invalid-feedback">
                Valid date_of_birth is required.
              </div>
            </div>    

            <div class="col-sm-6">
              <label for="room" class="form-label">Комната</label>
              <input type="text" class="form-control" id="room" asp-for="room" placeholder="88" value="@Model.room" required="">
              <div class="invalid-feedback">
                Valid room is required.
              </div>
            </div>    

            <div class="col-12">
              <label for="hobby" class="form-label">О себе</label>
              <input type="text" class="form-control" id="hobby" asp-for="hobby" placeholder="Теннис, волейбол" value="@Model.hobby" required="">
              <div class="invalid-feedback">
                Valid hobby is required.
              </div>
            </div>              

            <div class="col-12">
              <label for="address" class="form-label">Адрес</label>
              <input type="text" class="form-control" id="address" asp-for="adress" placeholder="Россия, Нижний Новгород, ул. Космонавтов, д.34, кв.45" value="@Model.adress" required="">
              <div class="invalid-feedback">
                Please enter your shipping address.
              </div>
            </div>     
            
            <div class="col-12">
              <label for="address" class="form-label">Vk</label>
              <input type="text" class="form-control" id="vk_link" asp-for="vk_link" placeholder="https://vk.com/id729831443" value="@Model.vk_link" required="">
              <div class="invalid-feedback">
                Please enter your link to Vk.
              </div>
            </div>  

          <hr class="my-4">
         
          <button class="w-100 btn btn-primary btn-lg" type="submit">Сохранить изменения</button>
          </div>
        </form>
      </div>

