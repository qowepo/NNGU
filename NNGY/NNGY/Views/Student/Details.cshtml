@model student



<div class="album py-2 bg-light">                   
 
    <div class="card shadow-sm">
        <div class = "container">
            <div class="row">

                
                <div class="col-md-5 col-xs-12 m-auto m-2 p-4">
                    <img id="img" class="img img-fluid mx-auto d-block rounded-circle" src = @Model.photo_link >
                </div>
                                   
                <div class="col-md-5 col-xs-12 m-auto card-body m-2">

                    <h2 class="text-center">@Model.surname @Model.name @Model.patronymic</h2>                    
                    <p class="card-text text-center m-3"><i>@Model.about_me</i></p>                    
                     
                    <p class="card-text text-left"><b>E-mail:</b> @Model.email</p> 
                    <p class="card-text text-left"><b>Телефон:</b> @Model.phone</p> 
                    <p class="card-text text-left"><b>Дата рождения:</b> @Convert.ToDateTime(Model.date_of_birth).ToString("dd/MM/yyyy").Replace('/','.')</p> 
                    <p class="card-text text-left"><b>Хобби:</b> @Model.hobby</p>
                    <p class="card-text text-left"><b>Адрес:</b> @Model.adress</p>
                    
                    <p class="card-text text-right m-2"><i class="bi bi-keyboard"></i><a class="alert-link" href=@Model.vk_link>@Model.vk_link</a></p> 

                    <div class="d-flex justify-content-between align-items-center p-2">
                        <div class="btn-group">
                            <a asp-controller="Home" asp-action="Student" type="button" class="btn btn-md btn-outline-secondary">All students</a>
                            <a asp-controller="Student" asp-action="Edit" asp-route-id="@Model.id" class="btn btn-md btn-outline-secondary" type="button">Edit</a>                                                                     
                        </div>
                        <h5><small class="text-muted">@Model.room комната</small></h5>
                    </div>
                </div>

            </div>                 
        </div>          
    </div>
</div>
       
