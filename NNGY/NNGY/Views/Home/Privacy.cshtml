@model IEnumerable<student>
 

<div class="container py-2" style="overflow-x:scroll>
    
    <div class="row">
        <table id="example" class="table table-striped table-hover table-bordered" >
             <thead>
                 <tr>
                     <th class="text-center">Комната</th>
                     <th class="text-center">ФИО</th>                      
                     <th class="text-center">Дата рождения</th>
                  </tr>
             </thead>
     
             <tbody>                 
                 @for(var i = 0; i < Model.Count(); i++) {

                     string full_name = @Model.ElementAt(i).surname + " " + @Model.ElementAt(i).name?.Remove(1) + "." + @Model.ElementAt(i).patronymic?.Remove(1) + ".";
                     <tr>
                         <td class="text-center"><b>@Model.ElementAt(i).room</b></td>
                         <td class="text-center"><a asp-controller="Student" asp-action="Details" asp-route-id="@Model.ElementAt(i).id">@full_name</a></td>
                         <td class="text-center">@Convert.ToDateTime(Model.ElementAt(i).date_of_birth).ToString("dd/MM/yyyy").Replace('.','/')</td>
                      </tr>
                 }                    
             </tbody>
         </table>
    </div>
</div>

 

   
    
 